            <update id="updateUser" parameterType="UserRequestDto">
                UPDATE  user
                SET         ID = #{id},
                            PASSWORD = #{password},
                            NAME = #{name},
                            AGE = #{age},
                            PHONE = #{phone},
                            GENDER = #{gender}
                WHERE   USER_SEQ = #{userSeq}
            </update>

            <delete id="deleteUser" parameterType="UserRequestDto">
                DELETE
                FROM user
                WHERE USER_SEQ = #{userSeq}
            </delete>

