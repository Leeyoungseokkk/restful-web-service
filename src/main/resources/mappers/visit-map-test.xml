            <update id="updateUser" parameterType="BoardRequestDto">
                UPDATE  new_schema.visit
                SET         NAME = #{name},
                            TITLE = #{title},
                            EMAIL = #{email},
                            NOTE = #{note},
                            VISITDAY = #{visitday},
                            VISITTIME = #{visittime}
                WHERE   SEQ = #{seq}
            </update>

            <delete id="deleteUser" parameterType="BoardRequestDto">
                DELETE
                FROM new_schema.visit
                WHERE SEQ = #{seq}
            </delete>

